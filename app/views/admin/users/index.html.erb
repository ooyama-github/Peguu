<div class="container mt-5">
  <%= flash[:alert] %>
  <div class="row">
    <div class="col-md-10 col-sm-5 mx-auto">
      <h3 class="mb-3"><i class="fas fa-users"></i> User Lists</h3>
        <table class="table table-hover">
          <thead>
            <tr>
              <th class="text-center">#</th>
              <th class="text-center">ユーザー名</th>
              <th class="text-center">メールアドレス</th>
              <th class="text-center">ステータス</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td class="text-center"><%= user.id %></td>
              <td class="text-center"><%= user.name %></td>
              <td class="text-center"><%= user.email %></td>
              <td class="text-center">
                <% if user.is_deleted %>
                  <strong class="text-secondary">利用停止</strong>
                <% else %>
                  <strong class="text-success">利用中</strong>
                <% end %>
              </td>
              <td class="text-center"><%= link_to '詳細', edit_admin_user_path(user.id), class: "btn btn-outline-secondary" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      <div class="mt-5 text-center"><%= paginate @users %></div>
    </div>
  </div>
</div>