<div class="container mt-md-5">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-3" >
      <h5 class="text-center pt-5"><i class="fas fa-user"></i> <%= @user.name %>'s Edit Detail</h5>
        <div class="form-body p-4">
          <%= form_with model: @user, url: admin_user_path do |f| %>
            <div class="input-group mb-3 mt-4">
              <div class="input-group-prepend">
                <span class="input-group-text rounded" aria-hidden="true"><strong>#</strong></span>
              </div>
              <div class="ml-3"><%= @user.id %></div>
            </div>
    
            <div class="input-group mb-3 mt-4">
              <div class="input-group-prepend">
                <span class="input-group-text rounded" aria-hidden="true"><i class="fas fa-user"></i></span>
              </div>
              <div class="ml-3"><%= @user.name %></div>
            </div>
            
            <div class="input-group mb-3 mt-4">
              <div class="input-group-prepend">
                <span class="input-group-text rounded" aria-hidden="true"><i class="fas fa-envelope"></i></span>
              </div>
              <div class="ml-3"><%= @user.email %></div>
            </div>
            
            <div class="input-group mb-3 mt-4">
              <div class="input-group-prepend">
                <span class="input-group-text rounded" aria-hidden="true"><i class="fas fa-pencil-alt"></i></span>
              </div>
              <div class="ml-3"><%= @user.introduction %></div>
            </div>
            
            <div class="input-group mb-3 mt-4">
              <div class="input-group-prepend">
                <span class="input-group-text rounded" aria-hidden="true"><i class="fas fa-toggle-on"></i></span>
              </div>
              <div class="ml-3">
                <div>
                  <%= f.radio_button :is_deleted, :false %>
                  <%= f.label :is_delted, "利用中", class: "text text-success" %>
                </div>
                <div>
                  <%= f.radio_button :is_deleted, :true %>
                  <%= f.label :is_delted, "利用停止", class: "text text-secondary" %>
                </div>
              </div>
            </div>
            
            <hr>
            <%= f.submit '保存', class: "btn btn-block btn-outline-success" %>
            <%= link_to 'キャンセル', admin_users_path, class: "btn btn-block btn-outline-secondary" %>
          <% end %>
        </div>
    </div>
  </div>
</div>