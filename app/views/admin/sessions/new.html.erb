<div class="container mt-4 px-sm-0">
  <div class="row  no-gutters">
    <div class="col-md-4 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h2 class='ml-5'>管理画面ログイン</h2>
  
      <%= form_with model: resource, as: resource_name, url: session_path(resource_name),local: true do |f| %>
        <div class="form-group">
          <%= f.label :メールアドレス, class:'col col-form-label' %><br />
          <div class='col'>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",:placeholder => "sample@example.com",required: true, class:'form-control'  %>
          </div>
        </div>
  
        <div class="form-group">
          <%= f.label :パスワード, class:'col col-form-label' %><br />
          <div class='col'>
            <%= f.password_field :password, autocomplete: "current-password", required: true, class:'form-control'  %>
          </div>
        </div>
  
        <div class="form-group">
          <div class='col'>
            <%= f.submit 'ログインする', class:"form-control btn btn-info my-3" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>