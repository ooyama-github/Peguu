<div class="row no-gutters">
  <div class="col-md-7 col-sm-10">
    <% post_item.post_comments.each do |post_comment| %>
      <div class="items-comment card w-75 mb-4">
        <div class="card-body">
          <p class="card-text">
            <%= image_tag post_comment.user.get_profile_image, size: '40x40', class: "rounded-circle" %>@
            <%= post_comment.user.name %>
          </p>
          <p class="card-text text-wrap"><%= post_comment.item_comment %></p>
          <p class="card-text">
            <small class="text-muted">
              <%= post_comment.created_at.strftime('%Y/%m/%d') %>
            </small>
            <span class="pr-5">
             <%= link_to '削除', admin_post_item_post_comment_path(post_comment.post_item, post_comment), method: :delete, data: { confirm: '本当に削除しますか？' }, remote: true, class: "btn btn-sm btn-outline-danger" %>
            </span>
          </p>
        </div>
      </div>
      <hr>
    <% end %>
  </div>
</div>