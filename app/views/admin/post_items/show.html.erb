<div class="container mt-5">
  <% if @post_item.user.is_deleted == false %>
    <div class="items-detail row">
      <div class="col-md-4 mx-auto my-auto">
        <div class="p-4"><%= image_tag @post_item.get_post_item_image, size: '350x250' %></div>
      </div>
  
      <div class="col-md-6 offset-md-1 pt-5">
        <table>
          <tbody>
            <tr>
              <td>
                <%= image_tag @post_item.user.get_profile_image, size: '40x40', class: "rounded-circle" %> @
                <%= @post_item.user.name %>
              </td>
            </tr>
            <tr>
              <td><%= @post_item.body %></td>
            </tr>
          </tbody>
        </table>
          
        <div class="pt-3">
          <small><%= @post_item.created_at.strftime('%Y/%m/%d') %></small>
        </div>
        <div class="text-right">
          <%= link_to '削除', admin_post_item_path, method: :delete, data: { confirm: '本当に削除しますか？' } , class: "btn btn-sm btn-danger" %>
        </div>
      </div>
    </div>

    <!--コメント/投稿・一覧-->
    <div class="comment-counter">
      <%= render 'public/post_comments/counter', post_item: @post_item %>
    </div>
    <div class="post_comments">
      <%= render 'admin/post_comments/item_comment', post_item: @post_item, post_comment: @post_comment %>
    </div>
      
    <div class="text-center">
      <i class="fas fa-th-list"></i><%= link_to '一覧へ戻る', admin_post_items_path, class: "btn btn-default-v3" %>
    </div>
  <% else %>
    <div class="text-center">退会したユーザーのため表示できません</div>
  <% end %>
</div>