<div class='container mt-5'>
  <div class='row'>
    <div class='col-md-3 col-sm-10'>
      <!--部分テンプレート-->
      <%= render 'info', user: @user %>
    </div>
    
    <div class='col-md-8 col-sm-10 offset-1'>
      <h3 class="mt-3"><i class="fas fa-book"></i> ブックマーク</h3>
      <table class="my-3">
        <thead class="border-bottom">
          <tr>
            <th>タイトル</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody class="mt-2">
          <% @bookmark_campsites.each do |campsite| %>
            <tr>
              <td class="pt-3 pr-4 text-wrap"><%= campsite.title %></td>
              <td class="pt-3 pr-4 text-wrap"><%= campsite.opinion %></td>
              <td class="pt-3 pr-1"><%= link_to '見てみる', campsite_path(campsite.id), class: "btn btn-sm btn-outline-info" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
