<div class='container mt-5'>
  <%= render "layouts/errors", obj: @user %>
  <div class="row">
    <div class='col-md-4 col-sm-10 mx-auto'>
      <%= render 'info', user: @user %>
    </div>
    
    <!--登録編集フォーム-->
    <div class="col-md-5 col-sm-10 mx-sm-auto" >
      <h4 class="py-3"><i class="fas fa-user-circle"></i> 登録情報編集</h4>
      <div class="form-body">
        <%= form_with model: @user, url: user_path(current_user) do |f| %>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text rounded" aria-hidden="true"><i class="fas fa-user-alt"></i></i></span>
            </div>
            <div class="ml-3"><%= f.text_field :name, autofocus: true, placeholder: "名前", class: "form-control" %></div>
          </div>

          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text rounded" aria-hidden="true"><i class="fas fa-camera-retro"></i></span>
            </div>
            <div class="ml-3"><%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %></div>
          </div>

          <div class="input-group mb-3 mt-4">
            <%= f.text_area :introduction, placeholder: "みんなに向けて一言書いてみよう！", class: "form-control" %>
          </div>
          
          <!--次に行くボタン-->
          <hr>
          <%= f.submit '保存', class: "btn btn-success" %>
          <%= link_to 'キャンセル', user_path(@user), class: "btn btn-secondary" %>
        <% end %>

        <div class="mt-5">
          <%= link_to '退会手続きへ', user_unsubscribe_path(@user), class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>